@model PortalEmpleo.WebApp.Models.ViewModels.JobOffers.JobOfferCreateEditViewModel

<div class="card shadow-sm fade-in">
    <div class="card-body">
        <form id="jobOfferForm" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-4">
                <div class="form-floating">
                    <input asp-for="Titulo" class="form-control" placeholder="Título" required />
                    <label asp-for="Titulo">
                        <i class="fas fa-briefcase me-1"></i>Título de la Oferta
                    </label>
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <small class="text-muted">
                    Ej: Desarrollador Full Stack, Gerente de Ventas, etc.
                </small>
            </div>

            <div class="mb-4">
                <div class="form-floating">
                    <textarea asp-for="Descripcion" class="form-control"
                              style="height: 200px" required
                              placeholder="Descripción"></textarea>
                    <label asp-for="Descripcion">
                        <i class="fas fa-align-left me-1"></i>Descripción
                    </label>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <small class="text-muted">
                    Incluye requisitos, responsabilidades y beneficios principales.
                </small>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Ubicacion" class="form-control" placeholder="Ubicación" required />
                        <label asp-for="Ubicacion">
                            <i class="fas fa-map-marker-alt me-1"></i>Ubicación
                        </label>
                        <span asp-validation-for="Ubicacion" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Salario" type="number" step="0.01" class="form-control" placeholder="Salario" />
                        <label asp-for="Salario">
                            <i class="fas fa-money-bill-wave me-1"></i>Salario
                        </label>
                        <span asp-validation-for="Salario" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <div class="form-floating">
                    <select asp-for="IdTipoContrato" class="form-select" required>
                        <option value="">Seleccione un tipo</option>
                        <option value="1">Tiempo Completo</option>
                        <option value="2">Medio Tiempo</option>
                        <option value="3">Por Proyecto</option>
                        <option value="4">Temporal</option>
                    </select>
                    <label asp-for="IdTipoContrato">
                        <i class="fas fa-file-contract me-1"></i>Tipo de Contrato
                    </label>
                    <span asp-validation-for="IdTipoContrato" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver
                </a>
                <button type="submit" class="btn btn-primary" id="submitButton">
                    <i class="fas fa-save me-2"></i>@(Model.IdOferta == 0 ? "Publicar Oferta" : "Guardar Cambios")
                </button>
            </div>
        </form>
    </div>
</div>